//测试案例抛出Fail异常来指示测试失败的情况
class Fail
{
    Fail(String s)
    {
        this.e = new Exception(s);
    }

    Exception e usemethod;
}

interface CondCheck
{
    public void when(bool cond);
}

public CondCheck fail(String s)
{
    return []{
        public void when(bool cond)
        {
            if (cond)
            {
                throw(new Fail(s));
            }
        }
    };
}
